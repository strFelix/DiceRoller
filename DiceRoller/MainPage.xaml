<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="ROLADOR DE DADOS" FontSize="30" HorizontalOptions="Center" Margin="0, 0, 0, 80" VerticalTextAlignment="Center"/>
            <Label x:Name="numberOutput" Text="0" FontSize="80" HorizontalOptions="Center" />


            <Picker x:Name="picker" HorizontalOptions="Center"
            Title="Quantidade de lados:" FontSize="16">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>4</x:String>
                        <x:String>6</x:String>
                        <x:String>10</x:String>
                        <x:String>20</x:String>
                        <x:String>100</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="ROLAR O DADO" BackgroundColor="#4c4c4c" Margin="30"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
